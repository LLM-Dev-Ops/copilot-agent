#!/bin/bash
#
# Pre-commit hook for LLM-CoPilot-Agent
# Runs code quality checks and unit tests before allowing commit
#
# Installation:
#   cp scripts/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit

set -e

echo "üîç Running pre-commit checks..."
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if running in CI (skip checks)
if [ "$CI" = "true" ]; then
    echo "Running in CI, skipping pre-commit hooks"
    exit 0
fi

# Function to print status
print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}‚úÖ $2${NC}"
    else
        echo -e "${RED}‚ùå $2${NC}"
    fi
}

# 1. Check formatting
echo "üìù Checking code formatting..."
cargo fmt --all -- --check
FMT_STATUS=$?
print_status $FMT_STATUS "Code formatting"

if [ $FMT_STATUS -ne 0 ]; then
    echo -e "${YELLOW}Run 'cargo fmt' to fix formatting issues${NC}"
    exit 1
fi

# 2. Run clippy
echo ""
echo "üîç Running clippy linter..."
cargo clippy --all-targets --all-features -- -D warnings
CLIPPY_STATUS=$?
print_status $CLIPPY_STATUS "Clippy linter"

if [ $CLIPPY_STATUS -ne 0 ]; then
    echo -e "${YELLOW}Fix clippy warnings before committing${NC}"
    exit 1
fi

# 3. Run unit tests
echo ""
echo "üß™ Running unit tests..."
cargo test --lib --bins --quiet
TEST_STATUS=$?
print_status $TEST_STATUS "Unit tests"

if [ $TEST_STATUS -ne 0 ]; then
    echo -e "${YELLOW}Fix failing tests before committing${NC}"
    exit 1
fi

# 4. Check for common issues
echo ""
echo "üîé Checking for common issues..."

# Check for TODO/FIXME in staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)
if [ -n "$STAGED_FILES" ]; then
    TODO_COUNT=$(echo "$STAGED_FILES" | xargs grep -n "TODO\|FIXME" 2>/dev/null | wc -l || true)
    if [ $TODO_COUNT -gt 0 ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Found $TODO_COUNT TODO/FIXME comments${NC}"
        echo "Consider addressing them before committing"
    fi
fi

# Check for debug statements
DEBUG_COUNT=$(echo "$STAGED_FILES" | xargs grep -n "dbg!\|println!" 2>/dev/null | wc -l || true)
if [ $DEBUG_COUNT -gt 0 ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Found $DEBUG_COUNT debug statements (dbg!/println!)${NC}"
    echo "Consider removing them before committing"
fi

echo ""
echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
echo ""
exit 0
